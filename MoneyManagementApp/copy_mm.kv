<RegistrationScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Registration'
            font_size: self.width / 20
            background_color: (.4, .5, 100, .3)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        
        GridLayout:
            cols: 2

            Label:
                text:'Username'
            
            TextInput:
	            multiline: False
                id: username
                text:'enter desired username'
        
            Label:
                text:'Email'
            
            TextInput:
	            multiline: False
                id: 'email'
                text: 'enter email address'
        
            Label:
                text: 'Password'
            
            TextInput:
	            multiline: False
                id: password
                password: True
                text: "password"
            
            Label:
                text: 'Password (confirmation)'
            
            TextInput:
	            multiline: False
                id: confirmation
                password: True
                text: 'password'
        
            Label:
                text: 'Phone number'
            
            TextInput:
	            multiline: False
                id: phone_number
                text: 'phone number'

        
        BubbleButton:
            background_color: (4, 0, 100, 5)
            size_hint: 0.5, 0.4
            pos_hint: {'x':.25 , 'y': .5}
            text: "Submit"
            on_press:
                root.register(app.db, app)

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Login'
            font_size: self.width / 20
            background_color: (.4, .5, 100, .3)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        GridLayout:
            cols: 2

            Label:
                text:'Username'
            
            TextInput:
	            multiline: False
                id: username
                on_touch_down: #:set self.text ''
        
            Label:
                text: 'Password'
            
            TextInput:
	            multiline: False
                id: password
                password: True        

        BubbleButton:
            background_color: (4, 0, 100, 5)
            size_hint: 0.5, 0.4
            pos_hint: {'x':.25 , 'y': .5}
            text: "Login"
            on_press:
                root.login(app.db, app)
        
        BoxLayout:
            orientation: 'horizontal'
            BubbleButton:
                background_color: (4, 0, 100, 5)
                text: "Forgot Password"
                on_press:
                    root.reset_password(app.db)
            BubbleButton:
                background_color: (4, 0, 100, 5)
                text: "New User"
                on_press:
                    root.register_new_user(app.db)







<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Menu'
            font_size: self.width / 20
            background_color: (.4, .5, 100, .3)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        BubbleButton:
            text: 'Transactions'
            background_color: (.4, .5, 100, .3)
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "TransactionsScreen"
                

        BubbleButton:
            text: 'Schedule'
            background_color: (.4, .5, 100, .3)
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "ScheduleScreen"

        BubbleButton:
            text: 'Budgets'
            background_color: (.4, .5, 100, .3)
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "BudgetsScreen"

        BubbleButton:
            text: 'Wallets'
            background_color: (.4, .5, 100, .3)
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "WalletsScreen"

        BubbleButton:
            text: 'Goals'
            background_color: (.4, .5, 100, .3)
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 1
                root.manager.current = "GoalsScreen"
        
        BubbleButton:
            background_color: (4, 0, 100, 5)
            size_hint: 0.5, 0.4
            pos_hint: {'x':.25 , 'y': .5}
            text: "Logout"
            on_press:
                root.log_out(app)


<TransactionsScreen>
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Transactions'
            on_parent:
                root.load_transactions(app)
        
<SubTransactionScreen>
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Add Transaction'
        GridLayout:
            cols: 2
            Label:
                text: 'Location'
            
            TextInput:
	            multiline: False

            Label:
                text: 'Date'
            
            TextInput:
	            multiline: False
                text: self.parent.parent.parent.today_timestamp()
            
            Label:
                text: 'Amount'
            
            TextInput:
	            multiline: False

            Label:
                text: 'Transaction Type'
            
            TextInput:
	            multiline: False
                text: 'Deposit or Withdrawl'
            
            Label:
                text: 'Tag'
            
            TextInput:
                text: 'No Tag'
                multiline: False
            
            Label:
                text: 'Wallet Name'
            
            TextInput:
                text: 'No Wallet'
                multiline: False
            

            




